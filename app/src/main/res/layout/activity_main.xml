<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop= "-40dp"
        android:orientation="vertical">

   <TextView
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="Connect To A Device"
       android:textColor="@color/white"
       android:gravity="center"
       android:background="@color/maincolorlight"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/maincolorlight"
        android:layout_marginBottom="10dp">
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="198dp"
        android:id="@+id/bluetoothList"
        android:background="@color/white"
        android:layout_margin="1dp"></ListView>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_lights_on"
        android:id="@+id/lightsOn"
        android:textColor="@color/white"
        android:background="@color/maincolorlight"
        android:layout_marginBottom="5dp"
      />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_lights_off"
        android:id="@+id/lightsOff"
        android:textColor="@color/white"
        android:background="@color/maincolorlight"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_emergency_flashers"
        android:id="@+id/emergencyFlashers"
        android:textColor="@color/white"
        android:background="@color/maincolorlight"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_trailer_voltage"
        android:id="@+id/trailerVoltage"
        android:textColor="@color/white"
        android:background="@color/maincolorlight"
        android:layout_marginBottom="5dp"
        />
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motion Devices"
            android:id="@+id/motionDevicesButton"
            android:textColor="@color/white"
            android:background="@color/maincolorlight"
            android:layout_marginBottom="5dp"
            />


    </LinearLayout>
</RelativeLayout>
